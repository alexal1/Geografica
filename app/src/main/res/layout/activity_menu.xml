<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.alex_aladdin.geografica.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/background">

        <Button
            android:id="@+id/button_championship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_menu_shape_red"
            android:minWidth="300dp"
            android:minHeight="60dp"
            android:text="@string/menu_championship"
            android:textSize="20sp"
            android:textColor="@drawable/button_menu_text_red"
            android:onClick="onButtonChampionshipClick">
        </Button>

        <Button
            android:id="@+id/button_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_menu_shape"
            android:minWidth="300dp"
            android:minHeight="60dp"
            android:text="@string/menu_training"
            android:textSize="20sp"
            android:textColor="@drawable/button_menu_text"
            android:onClick="onButtonTrainingClick">
        </Button>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_menu_shape"
            android:minWidth="300dp"
            android:minHeight="60dp"
            android:text="@string/menu_rate"
            android:textSize="20sp"
            android:textColor="@drawable/button_menu_text"
            android:onClick="onButtonRateClick">
        </Button>

    </LinearLayout>
</RelativeLayout>