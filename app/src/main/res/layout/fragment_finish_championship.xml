<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    android:gravity="center"
    android:background="@color/dark_screen"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/layout_window"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@drawable/window"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/text_finish_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:text="@string/finish_russian_federation"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/text_finish_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="@color/white_pressed"/>

        <!-- Внутри GridLayout показываем результаты: время + ошибки -->
        <GridLayout
            android:id="@+id/layout_finish_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:columnCount="2">

            <TextView
                android:layout_gravity="end"
                android:text="@string/finish_time"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_finish_time"
                android:layout_gravity="start"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_gravity="end"
                android:text="@string/finish_mistakes"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/text_finish_mistakes"
                android:layout_gravity="start"
                android:textSize="30sp"
                android:textColor="@color/white"/>

        </GridLayout>

        <TextView
            android:id="@+id/text_finish_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/button_finish_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:src="@drawable/button_finish_flag"
            android:background="@color/transparent"
            tools:ignore="ContentDescription"/>

    </LinearLayout>
</LinearLayout>